<%-include('header')-%>
  
<div class="text-center center-div  " id="login">
    <div class="container w-25 border py-5 primary ">
       <div class="title">
        <h2 class="font-weight-bold login "><i>Login System</i></h2>
        <span class ="login">Login only for the exisisting user</span>
        <br>
         <%if(locals.logout){
            %>
            <div class="alert-success text-center">
                <%=logout%>
            </div>
            <%}%>
        <br> 
       
       </div>
       <form action="/route/login" method="post"> 
        <div class="form-group">
            <input type="username" class="form-control" placeholder="username"name ="username">
            <br>
            <input type="password" class="form-control" placeholder="password"name ="password">
        </div>
        <button type ="submit" class="btn btn-success rounded-pill">submit</button>
       </form>
    </div>

</div> 



    <%-include('footer')-%>  